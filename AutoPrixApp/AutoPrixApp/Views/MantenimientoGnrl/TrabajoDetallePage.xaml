                    </StackLayout>
                </Frame>-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />                        
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnTrabajos"
                            Text="Mas trabajos"
                            BackgroundColor="#2374FF"
                            CornerRadius="25"
                            Grid.Row="0"
                            Grid.Column="0"
                            Command="{Binding GetTrabajos}">
                    </Button>

                    <Button Text="Guardar Trabajo"
                            Grid.Row="0"
                            Grid.Column="1"
                            CornerRadius="25"
                            TextColor="White"
                            BackgroundColor="#2374FF"
                            FontSize="Body"
                            Command="{Binding OnGuardarTrabajo}" />
                </Grid>
                
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>